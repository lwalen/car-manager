%h3 Add Gas
= form_for [@car, GasRecord.new], html: {class: 'form-horizontal', novalidate: true} do |f|
  = f.hidden_field :car_id, value: @car.id

  .form-group
    = f.label :date, class: 'control-label col-xs-3'
    .col-xs-9
      .input-group
        .input-group-btn
          .btn.btn-default.today Today
        = f.text_field :date, class: 'form-control date', autocomplete: 'off'

  .form-group
    = f.label :mileage, class: 'control-label col-xs-3'
    .col-xs-9
      .input-group
        = f.number_field :mileage, class: 'form-control', autocomplete: 'off'
        %span.input-group-addon= current_user.distance_unit.downcase

  .form-group
    = f.label :cost, class: 'control-label col-xs-3'
    .col-xs-9
      .input-group
        %span.input-group-addon $
        = f.number_field :cost, class: 'form-control', autocomplete: 'off'

  .form-group
    = f.label :volume, current_user.volume_unit, class: 'control-label col-xs-3'
    .col-xs-9
      .input-group
        = f.number_field :volume, class: 'form-control', autocomplete: 'off'
        %span.input-group-addon= current_user.volume_unit.downcase

  .text-right
    = f.submit 'add', class: 'btn btn-primary btn-lg'
