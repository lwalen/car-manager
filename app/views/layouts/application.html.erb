<!DOCTYPE html>
<html>
<head>
<title>Gas Tracker</title>
<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<% if notice %>
		<div class="alert alert-<%= flash[:notice_type] %> twelve columns">
			<%= notice %>
		</div>
	<% end %>
	<div style="clear: both"></div>
	<div class="three columns sidebar">
		<nav>
			<h3><%= link_to "Gas Tracker", root_url %></h3>
			<ul>
				<% if user_signed_in? %>
					<li><hr/></li>
					<li><%= link_to "Cars", cars_url %></li>
					<li><%= link_to "Sign Out", signout_url %></li>
					<li><%= current_user %></li>
				<% else %>
						<li><%= link_to "Sign In", signin_url %></li>
					<li><%= link_to "Register", register_url %></li>
				<% end %>
			</ul>
		</nav>
		&nbsp;
	</div>
	<div class="twelve columns offset-by-one content">
		<%= yield %>
	</div>
</div>
</body>
</html>
