%h4 Add Record
= form_for Record.new, html: {class: 'form-horizontal'} do |f|
  = f.hidden_field :car_id, value: @car.id

  .form-group
    = f.label :date, class: 'control-label col-sm-2'
    .col-sm-4
      .input-group
        .input-group-btn
          .btn.btn-default#today Today
        = f.text_field :date, class: 'form-control'

  .form-group
    = f.label :mileage, class: 'control-label col-sm-2'
    .col-sm-4
      = f.text_field :mileage, class: 'form-control'

  .form-group
    = f.label :gallons, class: 'control-label col-sm-2'
    .col-sm-4
      = f.text_field :gallons, class: 'form-control'

  .form-group
    = f.label :cost, class: 'control-label col-sm-2'
    .col-sm-4
      = f.text_field :cost, class: 'form-control'

  = f.submit 'add', class: 'btn btn-primary col-sm-offset-2'
