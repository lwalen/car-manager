
%table.table
  %thead
    %tr
      %th Date
      %th Mileage
      %th Gallons
      %th Cost
      %th.hidden-xs
  %tbody>
    - records.each do |rec|
      %tr
        %td= rec.date.strftime('%b %-d')
        %td= number_with_delimiter(rec.mileage, delimiter: ',')
        %td= number_with_precision(rec.gallons, precision: 2)
        %td= number_to_currency(rec.cost)

        %td.hidden-xs
          - if rec.stat?
            = link_to disable_stats_record_path(rec.id) do
              stats?
              = check_box_tag :stats, 1, true
          - else
            = link_to enable_stats_record_path(rec.id) do
              stats?
              = check_box_tag :stats, 1, false
          |
          = link_to 'delete', rec, method: :delete, data: { confirm: "Are you sure you want to delete this record?" }

