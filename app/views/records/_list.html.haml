
%table.table
  %thead
    %tr
      %th Date
      %th Mileage
      %th Gallons
      %th Cost
      %th.hidden-xs
  %tbody>
    - records.each do |rec|
      %tr
        %td= rec.date.strftime('%b %-d')
        %td= number_with_delimiter(rec.mileage, delimiter: ',')
        %td= number_with_precision(rec.gallons, precision: 2)
        %td= number_to_currency(rec.cost)

        %td.hidden-xs.text-right
          = link_to toggle_stats_record_path(rec.id), method: :post, class: "btn btn-xs btn-default" do
            stats
            %span.glyphicon{class: "glyphicon-#{rec.stat? ? 'ok' : 'none'}"}
          = link_to 'delete', rec, method: :delete, class: "btn btn-xs btn-danger", data: { confirm: "Are you sure you want to delete this record?" }

