
%table.records
	%thead
		%tr
			%th Date
			%th Mileage
			%th Gallons
			%th Cost
			%th
	%tbody>
		- records.each do |rec|
			%tr
				%td= rec.date
				%td= rec.mileage
				%td= number_with_precision(rec.gallons, precision: 2)
				%td= number_to_currency(rec.cost)
				%td.delete= link_to 'delete', rec, method: :delete
