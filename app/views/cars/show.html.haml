
%header
	%h1
		= @car
		= link_to "export", car_path(format: "csv")
	-#
		.stats
			%p
				%em Average MPG:
				= number_with_precision @car.mpg, precision: 3
			%p
				%em Cost per month:
			%p
				%em Gallons per month:
= render 'records/new'
#records
	- if @records.empty?
		%p no records yet!
	- else
		= render partial: 'records/list', locals: {records: @records}
