%h4 New Car
= form_for Car.new, html: {class: 'form-horizontal'} do |f|
  .form-group
    = f.label :name, class: 'control-label col-xs-3'
    .col-xs-9
      .input-group
        = f.text_field :name, class: 'form-control'
        .input-group-btn
          = f.submit 'Add', class: 'btn btn-primary'
