
<h1><%= @user.username %></h1>
<div class="row-fluid">
	<div class="span4">
		<br/>
		<div class="media">
			<div class="media-body">
				<h4 class="media-heading"><%= @user.name %></h4>
				<p class="muted"><%= @user.email %></p>
			</div>
		</div>

		<% if user_logged_in? && current_user.id == @user.id %>
			<br/>
			<br/>
			<%= link_to 'Edit User Info', edit_user_path(@user.id), class: 'btn' %>
			<br/>
			<br/>
			<%= link_to 'Delete Account', @user, 
				confirm: 'Are you sure? This is permanent!', 
				method: :delete,
				class: 'btn btn-danger'	%>
		<% end %>
	</div>


	<div class="span8">
		<% if current_user.id == @user.id %>

			<%= render 'tasks/new' %>

			<% @user.tasks.each do |task| %>
				<div class="well well-small">
					<div class="pull-right">
						<%= link_to 'edit', edit_task_path(task.id) %>
						<%= link_to 'delete', task, 
							confirm: 'Are you sure you wish to delete this task?', 
							method: :delete %>
					</div>
					<div class="<%= task.private? ? 'muted' : '' %>">
						<h4><%= task.name %></h4>
						<p><%= task.description %></p>
					</div>
				</div>
			<% end %>

		<% else %>

			<% @user.tasks.public.each do |task| %>
				<div class="well well-small">
					<div>
						<h4><%= task.name %></h4>
						<p><%= task.description %></p>
					</div>
				</div>
			<% end %>

		<% end %>
	</div>

</div>
