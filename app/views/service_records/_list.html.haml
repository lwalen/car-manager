%table.table
  %thead
    %tr
      %th Date
      %th Mileage
      %th Cost
      %th Type
      %th Notes
      %th.hidden-xs
  %tbody>
    - services.each do |ser|
      %tr
        %td= ser.date.strftime('%b %-d')
        %td= number_with_delimiter(ser.mileage.round, delimiter: ',')
        %td= number_to_currency(ser.cost)
        %td= ser.service_type
        %td= ser.notes

        %td.hidden-xs.text-right
          = link_to 'delete', ser, method: :delete, class: "btn btn-xs btn-danger", data: { confirm: "Are you sure you want to delete this service?" }

